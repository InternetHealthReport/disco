set term pdf
set output "burst.pdf"


set timefmt "%s"
set xdata time
set grid xtics
set y2label "Burst level"
set lmargin 4
unset key
# full day
#set xrange ["1465257600":"1465344000"]
#set format x ""
set xrange ["1311811200":"1311897600"]

set format x "%Y-%m-%d\n%H:%M"

set title "RIPE Atlas probes in NL connected to RIPE Atlas infrastucture\n(only probes with disconnects shown)"

set multiplot layout 2,1

### 2. probe level (absolute)
set y2label "connected probe count"
#plot "nl-level.txt" u 1:2 w steps lw 2
set xtics font ",10"
plot "probe-connected-abs.txt" u 1:2 w steps lw 2

### 3. burst signal
set format x "%d%b\n%H:%M"
set xlabel "Time" font ",10"
set y2label "Burst level"
set xtics font ",10"
plot "stepped-burst.txt" u 1:2 w steps lw 2
